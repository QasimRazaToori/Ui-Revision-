import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  const MyApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
        home: Scaffold(
      appBar: AppBar(
        title: Center(
          child: Text('Qasim'),
        ),
      ),
      body: Align(          //Same as for centering the wigets with center widget
        widthFactor: 3,
        heightFactor: 2,
        child: Container(
          decoration: BoxDecoration(
            gradient: LinearGradient(colors: [Colors.black, Colors.white]),
          ),
          height: 200,
          width: 200,
        ),
      ),
    ));
  }
}
